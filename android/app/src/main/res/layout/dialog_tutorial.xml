<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xxlarge">

    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_xxlarge"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:srcCompat="@drawable/ic_copy_address_tutorial"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dialogTitleTextView"
        style="@style/TextAppearance.Body.Large.Sans.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="4"
        android:visibility="gone"
        tools:text="@tools:sample/lorem[40]"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dialogDescriptionTextView"
        style="@style/TextAppearance.Footnote.Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="5"
        android:visibility="gone"
        tools:text="@tools:sample/lorem[50]"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogNeutralButton"
        style="@style/Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:visibility="gone"
        tools:text="@tools:sample/lorem[3]"
        tools:visibility="visible" />

</LinearLayout>
