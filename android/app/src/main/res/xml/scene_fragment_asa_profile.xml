<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@id/assetAboutFragmentContainerView"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@id/toolbar">
            <Layout
                android:layout_width="0dp"
                android:layout_height="@dimen/default_toolbar_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/assetLogoImageView">
            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/spacing_xxxxlarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />
        </Constraint>

        <Constraint
            android:id="@id/assetNameAndBadgeTextView"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/assetPriceTextView"
            app:layout_constraintEnd_toStartOf="@id/assetIdTextView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/assetLogoImageView">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xlarge"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:drawablePadding="@dimen/spacing_xsmall"
                app:layout_goneMarginEnd="@dimen/spacing_xlarge" />
        </Constraint>

        <Constraint
            android:id="@id/assetIdTextView"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/assetNameAndBadgeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/assetNameAndBadgeTextView"
            app:layout_constraintTop_toTopOf="@id/assetNameAndBadgeTextView">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_xlarge" />
        </Constraint>

        <Constraint
            android:id="@id/assetPriceTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_xlarge"
                android:layout_marginTop="@dimen/spacing_xsmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetNameAndBadgeTextView" />
            <PropertySet
                android:alpha="1"
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/assetAboutFragmentContainerView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_xxxxlarge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetPriceTextView" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusConstraintLayout"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusLabelTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintEnd_toStartOf="@id/assetStatusActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/accountTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxsmall"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/bottom_safe_area_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/assetStatusActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetStatusLabelTextView" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusActionButton"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/loadingLayout"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@id/toolbar">
            <Layout
                android:layout_width="0dp"
                android:layout_height="@dimen/default_toolbar_height"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@id/assetLogoImageView">
            <Layout
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="@id/assetNameAndBadgeTextView"
                app:layout_constraintEnd_toStartOf="@id/assetNameAndBadgeTextView"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/spacing_xlarge"
                app:layout_constraintTop_toTopOf="@id/assetNameAndBadgeTextView" />
        </Constraint>

        <Constraint
            android:id="@id/assetNameAndBadgeTextView"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@id/assetPriceTextView"
            app:layout_constraintEnd_toStartOf="@id/assetIdTextView"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/assetLogoImageView"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xsmall"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/spacing_xxsmall"
                android:drawablePadding="@dimen/spacing_xsmall"
                app:layout_goneMarginEnd="@dimen/spacing_xlarge" />
        </Constraint>

        <Constraint
            android:id="@id/assetIdTextView"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@id/assetNameAndBadgeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/assetNameAndBadgeTextView"
            app:layout_constraintTop_toTopOf="@id/assetNameAndBadgeTextView">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_xlarge" />
        </Constraint>

        <Constraint
            android:id="@id/assetPriceTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_xlarge"
                android:layout_marginTop="@dimen/spacing_xsmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetNameAndBadgeTextView" />
            <PropertySet
                android:alpha="0"
                android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/assetAboutFragmentContainerView">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetNameAndBadgeTextView" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusConstraintLayout"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusLabelTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:layout_marginEnd="@dimen/spacing_normal"
                app:layout_constraintEnd_toStartOf="@id/assetStatusActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/accountTextView"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxsmall"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/bottom_safe_area_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/assetStatusActionButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assetStatusLabelTextView" />
        </Constraint>

        <Constraint
            android:id="@id/assetStatusActionButton"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint
            android:id="@id/loadingLayout"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
